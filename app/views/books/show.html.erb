<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>

      <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>

      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %><br/>
      <%= f.submit 'Create Book' %>

<% end %>
    </div>
    <div class="col-lg-8">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td><%= link_to "Edit", edit_book_path(@book) %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>